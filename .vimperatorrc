" Options {{{1
set runtimepath=~/.vimperator
set titlestring="Mozilla Firefox"
set messages=100
set verbose=1
set defsearch=google
set toolbars=noaddons,nobookmarks,nomenu,nonavigation,tabs
set complete=slS
set history=1000
